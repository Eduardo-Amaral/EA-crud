<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">EA-Crud</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/categorias">Categorias</a>
          </li>
          {{#if user}}
          <li class="nav-item">
              <!--Exibe um JSON que contém os dados do usuário-->
            <span id="user" class="d-none">{{user}}</span>
            <a id="hello" href="/usuarios/login" class="nav-link"></a>
          </li>
          {{else}}
          <li class="nav-item">
            <a href="/usuarios/login" class="nav-link">Entrar</a>
          </li>
          <li class="nav-item">
            <a href="/usuarios/registro" class="nav-link">Registrar</a>
          </li>
          {{/if}}
        </ul>
        <form class="d-flex">
        </form>
      </div>
    </div>
  </nav>
  <script type="text/javascript">
    //Cria uma variável que corresponde ao objeto de index [1] do JSON criando anteriormente.
    const userObject = document.getElementById('user').innerHTML.split(",")[1];
    //Exibe o nome do usuário.
    document.getElementById('hello').innerHTML = userObject.split("'")[1];

  </script>


</body>