<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-outline-success" name="button">Nova Categorias</button></a>


{{#each categorias}}
  <div class="card mt-5">
    <div class="card-body mt-2">
      <h4>{{nome}}</h4>
      <small><strong>Slug:</strong> {{slug}}</small>
      <br>
      <small><strong>Data de Criação:</strong> {{date}} </small><br>
      <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-outline-warning mt-3" name="button">Editar &#9999;&#65039;</button></a>
      <form action="/admin/categorias/deletar" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
      </form>
    </div>
  </div>
{{else}}
<h4 class="mt-4">Nenhuma Categoria Registrada</h4>
{{/each}}
