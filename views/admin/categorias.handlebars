<h2>Lista de Categorias</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success" name="button">Nova Categorias</button></a>


{{#each categorias}}
<div class="card mt-5">
    <div class="card-body mt-2">
        <h4>{{nome}}</h4>
        <small><strong>Slug:</strong> {{slug}}</small>
        <br>
        <small><strong>Data de Criação:</strong> {{date}} </small>
    </div>
</div>
{{else}}
{{/each}}